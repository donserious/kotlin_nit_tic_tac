<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Spinner
                    android:id="@+id/spinner11"
                    android:layout_width="match_parent"
                    android:tag="11"
                    android:layout_height="match_parent"/>
                <Spinner
                    android:id="@+id/spinner12"
                    android:tag="12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <Spinner
                    android:id="@+id/spinner13"
                    android:tag="13"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Spinner
                android:id="@+id/spinner21"
                android:tag="21"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/spinner22"
                android:tag="22"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/spinner23"
                android:tag="23"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Spinner
                android:id="@+id/spinner31"
                android:tag="31"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/spinner32"
                android:tag="32"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Spinner
                android:id="@+id/spinner33"
                android:tag="33"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </TableRow>


    </TableLayout>

    <TextView
        android:id="@+id/status"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>




</android.support.constraint.ConstraintLayout>